<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">
    <header>
        <%- include('../partials/header'); %>
    </header>
    <section class="intro">
        <div class="mask d-flex align-items-center h-100 gradient-custom">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-lg-9 col-xl-7">
                        <div class="card">
                            <div class="card-body p-4 p-md-5">
                                <h3 class="mb-4 pb-2">Registration Form</h3>

                                <form action="/addUser" method="POST">

                                    <div class="row">
                                        <div class="col-md-6 mb-4">

                                            <div class="form-outline">
                                                <input type="text" id="firstName" class="form-control"
                                                    name="firstName" required />
                                                <label class="form-label" for="firstName">First Name</label>
                                            </div>

                                        </div>
                                        <div class="col-md-6 mb-4">

                                            <div class="form-outline">
                                                <input type="text" id="lastName" class="form-control" name="lastName" required/>
                                                <label class="form-label" for="lastName">Last Name</label>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline datepicker">
                                                <label for="start">Birthday: </label>
                                                <input type="date" name="birthDay" placeholder="mm/dd/yyyy"  min="1997-01-01" max="2023-12-31" required>
                                            </div>                                   
                                        </div>
                                        <div class="col-md-6 mb-4">

                                            <h6 class="mb-2 pb-1">Gender: </h6>

                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="gender"
                                                    id="femaleGender" value="Female" />
                                                <label class="form-check-label" for="femaleGender">Female</label>
                                            </div>

                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="gender"
                                                    id="maleGender" value="Male" />
                                                <label class="form-check-label" for="maleGender">Male</label>
                                            </div>

                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="gender"
                                                    id="otherGender" value="Other" />
                                                <label class="form-check-label" for="otherGender">Other</label>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">

                                            <div class="form-outline">
                                                <input type="email" id="emailAddress" name="email" class="form-control" required  />
                                                <label class="form-label" for="emailAddress">Email</label>
                                            </div>

                                        </div>
                                        <div class="col-md-6 mb-4">

                                            <div class="form-outline">
                                                <input type="tel" id="phoneNumber" class="form-control" name="phoneNumber" required />
                                                <label class="form-label" for="phoneNumber">Phone Number</label>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <h6 class="mb-3">City:</h6>

                                        <select class="form-select" name="city" multiple>
                                            <option value="Ho Chi Minh">Ho Chi Minh</option>
                                            <option value="Ha Noi">Ha Noi</option>
                                            <option value="Los Angeles">Los Angeles</option>
                                            <option value="United State">United State</option>
                                            <option value="London">London</option>
                                            <option value="Paris">Paris</option>
                                            <option value="Gotham">Gotham</option>
                                        </select>
                                        <label class="form-label select-label">Choose the city</label>

                                        <div class="mt-4">
                                            <input class="btn btn-warning btn-lg" type="submit" value="Submit" />
                                        </div>

                                    </div>
                            </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>

</html>